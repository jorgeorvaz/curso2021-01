<?xml version="1.0"?>
<odoo>

    <record id="view_form_helpdesk" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string='Ticket'>
                <header>
                    <field name="name" widget='statusbar'/>
                    <button name="do_assign" type="object" string="Asignar" class="btn-primary" attrs="{'invisible': [('state', '!=', 'nuevo')]}" />
                    <button name="proceso" type="object" string="En proceso" class="btn-primary" states="asignado" />
                    <button name="pendiente" type="object" string="Pendiente" class="btn-primary" states="en_proceso,asignado" />
                    <button name="finalizado" type="object" string="Finalizar" class="btn-primary" states="nuevo,asignado,en_proceso,pendiente" />
                    <button name="cancelado" type="object" string="Cancelar" class="btn-primary" attrs="{'invisible':[('state', '=', 'cancelado')]}"/>
                    <!-- states para definir cuando se verÃ¡ -->
                </header>
                <sheet>
                    <div class='oetitle'>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="date_limit" />
                            <field name="state" />
                            <field name="ticket_qty" />
                        </group>
                        <group>
                            <field name="assigned" />
                            <field name="time" />
                        </group>
                    </group>
                    <notebook>
                        <page string='Description'>
                            <field name='description'/>
                            <group>
                                <field name="tag_name"/>
                                <button name="create_tag" type="object" string="Create tag" />
                            </group>
                            <field name='tag_ids'/>
                        </page>
                        <page string='Quality'>
                            <group string='Corrective Action'>
                                <field name='action_corrective' nolabel='1'/>
                            </group>
                            <group string='Preventive Action'>
                                <field name='action_preventive' nolabel='1'/>
                            </group>
                        </page>
                        <page string='Actions'>
                            <group>
                                <field name='action_ids'/>
                                <field name='user_id'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
                <field name="ticket_qty"/>
                <field name="user_id" string='Assigned user'/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_action_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket_action.form</field>
        <field name="model">helpdesk.ticket.action</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="ticket_id" attrs="{'readonly':True}" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string='Ticket'>
                <field name="name"/>
                <field name="user_id"/>
                <filter name='assigned' string="Assigned" domain="[('user_id', '!=', False)]"/>
                <filter name='date_limit' string="No date limit" domain="[('date_limit', '!=', False)]"/>
                <filter name='date_limit' string="Date limit" context="{'group_by':'date_limit'}"/>
                <filter string="Assigned to" name="user_id" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>

    <record id="view_helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Ticket">
                <field name="user_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="time" type="measure" widget="float_time"/>
            </pivot>
        </field>
    </record>

    <record id="view_helpdesk_ticket_graph" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string="Ticket">
                <field name="user_id"/>
                <field name="time" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" date_start="date" color="user_id" hide_time="true" event_limit="5">
                <field name="user_id" avatar_field="image_128"/>
                <field name="name" />
                <field name="user_id" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="user_id">
                <field name="color"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">

                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>

                                <div class="dropdown-menu" role="menu">
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>

                            <div class="o_kanban_record_title">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="date"/>
                                <field name="time"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <field name="user_id" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>