<?xml version="1.0"?>
<odoo>

    <record id="view_form_helpdesk" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string='Ticket'>
                <header>
                    <field name="name" widget='statusbar'/>
                    <button name="do_assign" type="object" string="Asignar" class="btn-primary" attrs="{'invisible': [('state', '!=', 'nuevo')]}" />
                    <button name="proceso" type="object" string="En proceso" class="btn-primary" states="asignado" />
                    <button name="pendiente" type="object" string="Pendiente" class="btn-primary" states="en_proceso,asignado" />
                    <button name="finalizado" type="object" string="Finalizar" class="btn-primary" states="nuevo,asignado,en_proceso,pendiente" />
                    <button name="cancelado" type="object" string="Cancelar" class="btn-primary" attrs="{'invisible':[('state', '=', 'cancelado')]}"/>
                    <!-- states para definir cuando se verÃ¡ -->
                </header>
                <sheet>
                    <div class='oetitle'>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="date_limit" />
                            <field name="state" />
                            <field name="ticket_qty" />
                        </group>
                        <group>
                            <field name="assigned" />
                            <field name="time" />
                        </group>
                    </group>
                    <notebook>
                        <page string='Description'>
                            <field name='description'/>
                            <group>
                                <field name="tag_name"/>
                                <button name="create_tag" type="object" string="Create tag" />
                            </group>
                            <field name='tag_ids'/>
                        </page>
                        <page string='Quality'>
                            <group string='Corrective Action'>
                                <field name='action_corrective' nolabel='1'/>
                            </group>
                            <group string='Preventive Action'>
                                <field name='action_preventive' nolabel='1'/>
                            </group>
                        </page>
                        <page string='Actions'>
                            <group>
                                <field name='action_ids'/>
                                <field name='user_id'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
                <field name="ticket_qty"/>
                <field name="user_id" string='Assigned user'/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_action_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket_action.form</field>
        <field name="model">helpdesk.ticket.action</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="ticket_id" attrs="{'readonly':True}" />
                </group>
            </form>
        </field>
    </record>


</odoo>