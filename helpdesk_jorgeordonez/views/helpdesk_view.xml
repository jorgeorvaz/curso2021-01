<?xml version="1.0"?>
<odoo>
<!-- 
Añadir en el header los siguiente botones:

Asignar, cambia estado a asignado y pone a true el campo asignado, visible sólo con estado = nuevo
En proceso, visible sólo con estado = asignado
Pendiente, visible sólo con estado = en proceso o asignado
Finalizar, visible en cualquier estado, menos cancelado y finalizado
Cancelar, visible si no está cancelado
Cada botón pondrá el objeto en el estado correspondiente. -->

    <record id="view_form_helpdesk" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string='Ticket'>
                <header>
                    <field name="name" widget='statusbar'/>
                    <button name="do_assign" type="object" string="Asignar" class="btn-primary" attrs="{'invisible': [('state', '!=', 'nuevo')]}" />
                    <button name="proceso" type="object" string="En proceso" class="btn-primary" states="asignado" />
                    <button name="pendiente" type="object" string="Pendiente" class="btn-primary" states="en_proceso, asignado" />
                    <button name="finalizado" type="object" string="Finalizar" class="btn-primary" states="asignado, en_proceso, pendiente" />
                    <button name="cancelado" type="object" string="Cancelar" class="btn-primary" attrs="{'invisible':[('state', '=', 'cancelado')]}"/>
                    <!-- states para definir cuando se verá -->
                </header>
                <sheet>
                    <div class='oetitle'>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="date_limit" />
                            <field name="state" />
                        </group>
                        <group>
                            <field name="assigned" />
                            <field name="time" />
                        </group>
                    </group>
                    <notebook>
                        <page string='Description'>
                            <field name='description'/>
                        </page>
                        <page string='Quality'>
                            <group string='Corrective Action'>
                                <field name='action_corrective' nolabel='1'/>
                            </group>
                            <group string='Preventive Action'>
                                <field name='action_preventive' nolabel='1'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

</odoo>